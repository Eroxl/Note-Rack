{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "incremental": true,
    "outDir": "dist",
    "sourceMap": true,
    "lib": [
      "dom",
      "es6"
    ],
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
